---
const weddingDate = new Date("2025-01-06T10:30:00");
---

<section>
    <div class="container mx-auto px-4">
        <img
            class="flower-1"
            style="position: absolute; right: 0; top: 0;"
            src="/images/background/flowers/top-right-1.svg"
            alt="Flower 1"
        />
        <img
            class="flower-1"
            style="position: absolute; left: -25px; top: 0;"
            src="/images/background/flowers/top-left-1.svg"
            alt="Flower 2"
        />
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
            <div class="bg-[#9f46d6] bg-opacity-50 p-4 rounded-lg">
                <span id="days" class="text-3xl md:text-4xl font-bold">0</span>
                <p>Days</p>
            </div>
            <div class="bg-[#9f46d6] bg-opacity-50 p-4 rounded-lg">
                <span id="hours" class="text-3xl md:text-4xl font-bold">0</span>
                <p>Hours</p>
            </div>
            <div class="bg-[#9f46d6] bg-opacity-50 p-4 rounded-lg">
                <span id="minutes" class="text-3xl md:text-4xl font-bold"
                    >0</span
                >
                <p>Minutes</p>
            </div>
            <div class="bg-[#9f46d6] bg-opacity-50 p-4 rounded-lg">
                <span id="seconds" class="text-3xl md:text-4xl font-bold"
                    >0</span
                >
                <p>Seconds</p>
            </div>
        </div>
    </div>
</section>

<style>
    @media (max-width: 768px) {
        .flower-1 {
            height: 20%;
        }
    }

    @media (min-width: 768px) {
        .flower-1 {
            height: 40%;
        }
    }
</style>

<script>
    const weddingDate = new Date("2025-01-06T10:30:00");

    const updateCountdown = () => {
        const now = new Date();
        const diff = weddingDate.getTime() - now.getTime();

        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor(
            (diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
        );
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((diff % (1000 * 60)) / 1000);

        document.getElementById("days")!.textContent = days.toString();
        document.getElementById("hours")!.textContent = hours.toString();
        document.getElementById("minutes")!.textContent = minutes.toString();
        document.getElementById("seconds")!.textContent = seconds.toString();
    };

    setInterval(updateCountdown, 1000);
    updateCountdown(); // Initial call to avoid 1-second delay
</script>
